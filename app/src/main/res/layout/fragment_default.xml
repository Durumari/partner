
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.a3did.partner.fragmentlist.DefaultFragment">
    <!--android:background="@color/pastelyellow"-->

    <!-- TODO: Update blank fragment layout -->





    <TextView
        android:text="assistanceNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="64dp"
        android:id="@+id/assistanceNum" />

    <TextView
        android:text="completeNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:id="@+id/completeNum"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/achieveNum"
        android:layout_marginEnd="34dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:weightSum="1">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_pentagon_made_of_stars"
            android:id="@+id/imageView5"
            android:clickable="true"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/imageView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="30dp"
            android:text=" : "
            android:id="@+id/textView3">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="30dp"
            android:text="500"
            android:id="@+id/default_star_num">
        </TextView>
    </LinearLayout>

    <TextView
        android:text="achieveNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/achieveNum"
        tools:text="achieveNum"
        android:layout_below="@+id/assistanceNum"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="21dp" />


</RelativeLayout>